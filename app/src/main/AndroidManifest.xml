<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.training_app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/scale"
        android:label="@string/app_name"
        android:roundIcon="@drawable/scale"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrainingApp">

        <activity
            android:name="com.example.training_app.mvp.main.MainActivity"
            android:exported="false" />

        <activity
            android:name="com.example.training_app.common.activities.WorkingoutActivity"
            android:exported="false" />
			
		<activity
            android:name="com.example.training_app.common.activities.ChooseActivity"
            android:exported="false" />

        <activity
            android:name="com.example.training_app.common.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>